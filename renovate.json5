{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'customManagers:dockerfileVersions'
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^.github/workflows/.*.yaml$/',
      ],
      matchStrings: [
        'DOCKER_VALIDATOR_VERSION:\\s*["\']?(?<currentValue>[^"\'\\s]+)["\']?',
      ],
      depNameTemplate: 'ghcr.io/your-ko/link-validator',
      datasourceTemplate: 'docker',
      versioningTemplate: 'docker',
    },
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile.*$"],
      "matchStrings": [
        "#\\s*renovate:\\s*datasource=(?<datasource>\\S+)\\s+depName=(?<depName>\\S+)(?:\\s+versioning=(?<versioning>\\S+))?\\s*[\\r\\n]+ARG\\s+\\w+_VERSION=(?<currentValue>\\S+)"
      ],
      "versioningTemplate": "{{#if versioning}}{{{versioning}}}{{else}}semver{{/if}}"
    }
  ],
  packageRules: [
    {
      "matchManagers": ["gomod"],
      "matchDepNames": ["go"],
      "matchDepTypes": ["golang"],
      "rangeStrategy": "bump"
    },
    {
      commitMessagePrefix: 'chore:',
      labels: [
        'chore',
      ],
      matchPackageNames: [
        '/.*/',
      ],
    },
    {
      matchPackageNames: [
        'ghcr.io/your-ko/link-validator',
      ],
      automerge: true,
      automergeType: 'pr',
      automergeStrategy: 'auto',
      pruneBranchAfterAutomerge: true,
      commitMessagePrefix: 'chore(deps): ',
      commitMessageTopic: 'link-validator',
      commitMessageExtra: 'to {{newVersion}}',
      labels: [
        'chore',
        'link-validator',
      ],
    },
    {
      matchPackageNames: [
        'your-ko/link-validator',
      ],
      automerge: true,
      automergeType: 'pr',
      automergeStrategy: 'auto',
      pruneBranchAfterAutomerge: true,
      commitMessagePrefix: 'chore(deps): ',
      commitMessageTopic: 'link-validator',
      commitMessageExtra: 'to {{newVersion}}',
      labels: [
        'chore',
        'link-validator',
      ],
    },
  ],
}
