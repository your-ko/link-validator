{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
  ],
  customManagers: [
    {
      customType: 'regex',
      managerFilePatterns: [
        '/^.github/workflows/.*.yaml$/',
      ],
      matchStrings: [
        'DOCKER_VALIDATOR_VERSION:\\s*["\']?(?<currentValue>[^"\'\\s]+)["\']?',
      ],
      depNameTemplate: 'ghcr.io/your-ko/link-validator',
      datasourceTemplate: 'docker',
      versioningTemplate: 'docker',
    },
  ],
  packageRules: [
    {
      commitMessagePrefix: 'chore:',
      labels: [
        'chore',
      ],
      matchPackageNames: [
        '/.*/',
      ],
    },
    {
      matchPackageNames: [
        'ghcr.io/your-ko/link-validator',
      ],
      commitMessagePrefix: 'chore(deps): ',
      commitMessageTopic: 'link-validator',
      commitMessageExtra: 'to {{newVersion}}',
      labels: [
        'chore',
        'link-validator',
      ],
    },
  ],
}
